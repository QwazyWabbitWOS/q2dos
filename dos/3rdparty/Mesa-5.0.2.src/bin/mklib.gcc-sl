#!/bin/sh

# Generic shared library creation script, tweaked from mklib.sunos5
# Now should be portable to most common UNIXen

#--common--------------------------------------------------------------

LIBRARY=$1
shift 1

MAJOR=$1
shift 1

MINOR=$1
shift 1

TINY=$1
shift 1

OBJECTS=$*

#--platform-------------------------------------------------------------

# -h works on more platforms than -soname, so use it instead.

gcc -shared -Wl,-h -Wl,$LIBRARY  -o $LIBRARY $OBJECTS
