CC = i586-pc-msdosdjgpp-gcc
CFLAGS = -g -O0 -Wall -I.

.PHONY: clean

OBJECTS =  util/svga-dump.o util/dos_v2.o

all: svd.exe

svd.exe: $(OBJECTS)
	$(CC) $(CFLAGS) $(OBJECTS) -o svd.exe

clean:
	rm -f util/*.o
	rm -f svd.exe

util/%.o : util/%.c
	$(CC) $(CFLAGS) -c $< -o $@
util/%.o : dos/%.c
	$(CC) $(CFLAGS) -c $< -o $@
