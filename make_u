#CC = gcc-4.2
#CFLAGS = -arch i386 -g -O0
CC = i586-pc-msdosdjgpp-gcc
CFLAGS = -g -O0 -Wall -Did386=0 -I.

.PHONY: clean
#

OBJECTS =  util/svga-dump.o util/dos_v2.o

all: svd

svd:	$(OBJECTS)
	$(CC) $(CFLAGS) $(OBJECTS) -o svd -lm

clean:
	rm -f util/*.o
	rm -f svd.exe
	rm -f svd

util/%.o : util/%.c
	$(CC) $(CFLAGS) -c $< -o $@
util/%.o : dos/%.c
	$(CC) $(CFLAGS) -c $< -o $@
